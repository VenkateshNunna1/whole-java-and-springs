import java.util.Scanner;
public class pattern6 {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		int spaces=n-1;
		int stars1=1;
		int stars2=1;
		for(int i=1;i<=2*n-1;i++) {
			int num1=i;
			for(int j=1;j<=spaces;j++) {
				System.out.print(" ");
			}
			for(int j=1;j<=num1;j++) {
				System.out.print(j);
			}
			for(int j=1;j<num1;j++) {
				System.out.println(j);
			}
			
			System.out.println();
			if(i<n) {
			spaces = spaces-1;
			}
			else {
				spaces=spaces+1;
			}
		}

	}

}
