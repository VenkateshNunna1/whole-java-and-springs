import java.util.Scanner;
public class pattern5 {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		int space=n-1;
		int star=1;
		for(int i=1;i<=2*n-1;i++) {
			for(int j=1;j<=space;j++) {
				System.out.print(" ");
			}
			for(int j=1;j<=star;j++) {
				System.out.print("*"+"");
			}
			System.out.println();
			if(i<n) {
			space=space-1;
			star=star+1;
			}
			else {
				space=space+1;
				star=star-1;

			}
		}
	}

}
